<div class="header">
    <div class="top_header">
        <div class="chaH">
            <h4>スターアイテム</h4>
        </div>
        <div class="header-right">
            <%= link_to "", starmessage_path, class:"fa fa-star",style:"color:white"%>
            <%= link_to "", mentionmessage_path,class:"fas fa-at",style:"color:white" %>
        </div>
    </div>
</div>
<div>
<%= render 'user/menu' %>
</div>

<div class="stararticle">
    <div id="starscrolldown">
        <% @dstarmessage.each do |starmsg|%>
            <div>
                <%= image_tag("user.png.jpg", :alt => "rss feed" ,:class =>"avatar") %>
                <span>&nbsp;</span>
                <%= starmsg.name %>
                <% @s_dif=(Time.zone.now-starmsg.created_at).to_i
                                        @days=@s_dif/(3600*24)
                                        @hours=@s_dif/3600
                                        @s_dif-=@hours*3600
                                        @minutes=@s_dif/60
                                        @s_dif-=@minutes*60
                                        @seconds=@s_dif
                                    %>
                <% if @days>=1  %>
                    (<%= @days%>-day ago)
                <% elsif @hours>=1  %>
                    (<%= @hours %>:
                <%= @minutes %>:
                    <%= @seconds %> ago)
                <% elsif @seconds>=0 && @hours==0  %>
                    (<%= @minutes %> min ago)
                <% end %>
                | <%= link_to "", directunstarmsg_path(:starmsgid => starmsg.id),class:"fa fa-star" %>
                </br>
                <span>&nbsp;</span>
                <%= starmsg.msg %><br>
                <h6  class="mentionname">Direct Message</h6>
                <hr>
            </div>
        <% end %>
    
    <% @channelstarmessage.each do |starmsg|%>
        <div>
            <%= image_tag("user.png.jpg", :alt => "rss feed" ,:class =>"avatar") %>
            <span>&nbsp;</span>
            <%= starmsg.username %>
            <% @s_dif=(Time.zone.now-starmsg.created_at).to_i
                                        @days=@s_dif/(3600*24)
                                        @hours=@s_dif/3600
                                        @s_dif-=@hours*3600
                                        @minutes=@s_dif/60
                                        @s_dif-=@minutes*60
                                        @seconds=@s_dif
                                    %>
            <% if @days>=1  %>
                (<%= @days%>-day ago)
            <% elsif @hours>=1  %>
                (<%= @hours %>:
                <%= @minutes %>:
                <%= @seconds %> ago)
            <% elsif @seconds>=0 && @hours==0  %>
                (<%= @minutes %> min ago)
            <% end %>
            | <%= link_to "", channelunstarmsg_path(:starmsgid => starmsg.chamsg_id),class:"fa fa-star" %>
            </br>
            <span>&nbsp;</span>
            <%= starmsg.msg %><br>
            <h6 class="mentionname">Channel Message:<%= starmsg.chaname %></h6>
            <hr>
        </div>
    <% end %>
    </div>
</div>
